<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="is_credit_card" invisible="1" />
                <field name="card" attrs="{'invisible': [('is_credit_card', '=', False)]}"/>
                <field name="installments" attrs="{'invisible': [('is_credit_card', '=', False)]}"/>
                <field name="lot_number" attrs="{'invisible': [('is_credit_card', '=', False)]}"/>
                 <field name="coupon_number" attrs="{'invisible': [('is_credit_card', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="view_pagos_tarjeta_tree" model="ir.ui.view">
            <field name="name">view.pagos.tarjeta.tree</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
            <tree string="Pagos con tarjeta" >
                <field name="date"/>
                <field name="journal_id" groups="account.group_account_user"/>
                <!-- <field name="display_name"/> -->
                <!-- <field name="partner_id"/> -->
                <field name="card" />
                <field name="installments" />
                <field name="lot_number" />
                <field name="coupon_number" />
                <field name="amount" sum="Total Amount"/>
                <field name="state"/>
            </tree>
	    </field>
	</record>

    <record id="view_pagos_tarjeta_search" model="ir.ui.view">
        <field name="name">view.pagos.tarjeta.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="card" string="Card"/>
                <field name="installments" string="Installments"/>
                <field name="lot_number" string="Lot"/>
                <field name="coupon_number" string="Coupon"/>
            </field>
        </field>
	</record>

    <record id="action_view_pagos_tarjeta" model="ir.actions.act_window">
        <field name="name">Tarjetas de Credito / Debito</field>
        <field name="res_model">account.payment</field>
        <field name="view_id" ref="view_pagos_tarjeta_tree" />
        <field name="domain">[('is_credit_card','=','1')]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        action="action_view_pagos_tarjeta" 
        id="menu_pagos_tarjeta_credito"
        sequence="50"
        parent="account_payment_fix.menu_finance_bank_and_cash"/>


</odoo>
