<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="account_voucher_rule" model="ir.rule">
            <field name="name">Voucher Multi-Company</field>
            <field name="model_id" ref="model_account_voucher"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record id="account_voucher_operation_rule" model="ir.rule">
            <field name="name">Voucher Operation Multi-Company</field>
            <field name="model_id" ref="model_account_voucher_operation"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('voucher_id.company_id','=',False),('voucher_id.company_id','child_of',[user.company_id.id])]</field>
        </record>
    </data>
</odoo>
