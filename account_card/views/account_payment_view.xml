<odoo>

    <!-- TODO inherit other form views also (like voucher printing module) -->
    <record id="view_account_payment_form_inherited" model="ir.ui.view">
        <field name="name">account.payment.form.inherited</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <form>
                <field name="voucher_type" invisible="1"/>
                <field name="voucher_subtype" invisible="1"/>
                <!-- <field name="voucherbook_block_manual_number" invisible="1"/> -->
                <field name="voucherbook_numerate_on_printing" invisible="1"/>
            </form>
            <!-- TODO ver si para una v10 implementamos algo parecido a los batch deposit y tal vez directamente hacemos que los pagos sean uno a uno con los cheques total se pueden agregar varios pagosen un payment group, tal vez para transfers usamos tambien payments groups -->
            <field name='ref' position="after">
                <div colspan="2" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher', 'delivered_third_voucher', 'issue_voucher'])]}">
                    <group name="vouchers">
                        <field name="voucher_id" attrs="{'invisible': [('voucher_id', '=', False)]}"/>
                        <!-- no usamos el widget many2many_tags porque les interesa filtrar y buscar por montos y demas -->
                        <!-- creamos un campo copy por compatibilidad con mig de v8 donde se podia mas de un voucher por payment, igualmente se podria unir todo en chekc_ids pero era medio complicada la consulta -->
                        <field name="voucher_ids" attrs="{'invisible': ['|',  '|', ('voucher_ids', '=', []), ('voucher_id', '!=', False), ('payment_method_code', 'not in', ['received_third_voucher', 'issue_voucher'])]}">
                            <tree edit="false" create="false">
                                <field name="name"/>
                                <field name="payment_date"/>
                                <field name="amount" sum="Total"/>
                                <field name="state" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                        <label for="voucher_ids" colspan="2" attrs="{'invisible': ['|', ('payment_method_code', '!=', 'delivered_third_voucher'), ('payment_type', 'not in', ['transfer', 'outbound'])]}"/>
                        <field name="voucher_ids"
                            nolabel="1" colspan="2"
                            options="{'no_create': True}"
                            domain="[('journal_id', '=', journal_id), ('state', '=', 'holding'), ('type', '=', 'third_voucher')]"
                            attrs="{'invisible': ['|', ('payment_method_code', '!=', 'delivered_third_voucher'), ('payment_type', 'not in', ['transfer', 'outbound'])], 'required': [('payment_method_code', '=', 'delivered_third_voucher'), ('payment_type', 'in', ['transfer', 'outbound']),  ('state', '!=', 'cancelled')]}">
                            <tree edit="false">
                                <field name="name"/>
                                <field name="payment_date"/>
                                <field name="amount" sum="Total"/>
                                <field name="state" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <group name="voucher_data" states='draft'>
                        <newline/>
                        <field name="voucherbook_id" options="{'no_create': True, 'no_open': True}" attrs="{'invisible': [('payment_method_code', 'not in', ['issue_voucher'])], 'required': [('payment_method_code', 'in', ['issue_voucher'])]}" domain="[('journal_id', '=', journal_id), ('state', '=', 'active')]"/>
                        <field name="voucher_number" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher', 'issue_voucher'])], 'required': ['|', ('payment_method_code', '=', 'received_third_voucher'), '&amp;', ('payment_method_code', '=', 'issue_voucher'), ('voucherbook_numerate_on_printing', '=', False)]}"/>
                        <field name="voucher_name" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher', 'issue_voucher'])], 'required': ['|', ('payment_method_code', '=', 'received_third_voucher'), '&amp;', ('payment_method_code', '=', 'issue_voucher'), ('voucherbook_numerate_on_printing', '=', False)]}"/>
                        <field name="voucher_issue_date" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher', 'issue_voucher'])], 'required': [('payment_method_code', 'in', ['received_third_voucher', 'issue_voucher'])]}"/>
                        <field name="voucher_payment_date" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher', 'issue_voucher'])], 'required': [('voucher_subtype', '=', 'deferred')]}"/>
                        <field name="voucher_card_id" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher'])],  'required': [('payment_method_code', 'in', ['received_third_voucher'])], 'required': [('payment_method_code', 'in', ['received_third_voucher'])]}"/>
                        <field name="voucher_owner_vat" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher'])],  'required': [('payment_method_code', 'in', ['received_third_voucher'])]}"/>
                        <field name="voucher_owner_name" attrs="{'invisible': [('payment_method_code', 'not in', ['received_third_voucher'])],  'required': [('payment_method_code', 'in', ['received_third_voucher'])]}"/>
                    </group>
                </div>
            </field>
            <label for="amount" position="before">
                <label for="amount" attrs="{'invisible': [('payment_method_code', '!=', 'delivered_third_voucher')]}"/>
                <div name="readonly_amount_div" class="o_row" attrs="{'invisible': [('payment_method_code', '!=', 'delivered_third_voucher')]}">
                    <field name="amount" readonly="True"/>
                    <field name="other_currency" />
                    <field name="currency_id" readonly="True" groups="base.group_multi_currency" attrs="{'invisible': [('other_currency', '=', False)]}"/>
                </div>
            </label>
            <label for="amount" position="attributes">
                <attribute name="attrs">{'invisible': [('payment_method_code', '=', 'delivered_third_voucher')]}</attribute>
            </label>
            <div name="amount_div" position="attributes">
                <attribute name="attrs">{'invisible': [('payment_method_code', '=', 'delivered_third_voucher')]}</attribute>
            </div>
            <field name="payment_method_line_id" position="after">
                <field name="voucher_deposit_type" widget="radio" attrs="{'invisible': ['|', ('payment_type', '!=', 'transfer'), ('payment_method_code', '!=', 'delivered_third_voucher')]}"/>
            </field>
        </field>
    </record>

    <!--  Vouchers search view -->
    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.voucher.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="voucher_ids"/>
            </field>
            <xpath expr="//filter[@name='state_sent']" position="before">
                <filter string="Vouchers To Print and Numerate" domain="[('payment_method_id.code', '=', 'issue_voucher'), ('state','=','draft'), ('voucher_name', '=', False)]" name="vouchers_to_numerate"/>
            </xpath>
        </field>
    </record>

</odoo>
