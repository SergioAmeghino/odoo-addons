<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_voucher_journal_form" model="ir.ui.view">
        <field name="name">account_voucher.account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <page name="bank_account">
                <label for="voucherbook_ids"/>
                <field name="voucherbook_ids" attrs="{'invisible': [('type', '!=', 'bank')]}" context="{'company_id':company_id}"/>
            </page>
            <field name="suspense_account_id" position="attributes">
                    <attribute name="domain">[('deprecated','=',False),('user_type_id','in',(3,9))]</attribute>
            </field>
        </field>
    </record>
</odoo>
