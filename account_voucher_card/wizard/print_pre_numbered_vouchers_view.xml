<?xml version="1.0" ?>
<odoo>

    <record id="print_pre_numbered_vouchers_view" model="ir.ui.view">
        <field name="name">Print Pre-numbered Vouchers</field>
        <field name="model">print.prenumbered.vouchers</field>
        <field name="arch" type="xml">
            <form string="Print Pre-numbered Vouchers">
                <p>Please enter the number of the first pre-printed voucher that you are about to print on.</p>
                <p>This will allow to save on payments the number of the corresponding voucher.</p>
                <group>
                    <field name="next_voucher_number"/>
                </group>
                <footer>
                    <button name="print_vouchers" string="Print" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
